<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DiagramActivityTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:backgroundStacked">@color/colorPrimary</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:backgroundStacked">@color/colorPrimaryDark</item>
        <item name="backgroundStacked">@color/colorPrimaryDark</item>
    </style>

    <style name="MonthButton">
        <item name="android:onClick">monthButtonClick</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
